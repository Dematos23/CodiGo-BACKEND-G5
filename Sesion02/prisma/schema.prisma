generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Categoria {
  id Int @id @unique @default(autoincrement())
  nombre String
  estado Boolean @default(true)
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")
  productos Producto[]

  @@map(name:"categorias")
}

model Producto {
  id Int @id @unique @default(autoincrement())
  nombre String
  precio Float 
  estado Boolean @default(true)
  createdAt DateTime @default(now()) @map(name: "created_at")
  updatedAt DateTime @updatedAt @map(name: "updated_at")
  categoriaId Int
  cateogria Categoria @relation(fields: [categoriaId], references: [id])

  @@map(name:"productos")
}